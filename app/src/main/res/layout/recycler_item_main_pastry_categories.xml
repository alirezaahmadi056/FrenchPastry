<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="12dp"
    android:layout_margin="8dp"
    android:background="@drawable/back_item_main_pastry_categories"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imgCategory"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:contentDescription="@string/category_desc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/img_category" />

    <TextView
        android:id="@+id/txtCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        tools:text="شیرینی مخصوص"
        android:textSize="@dimen/text_normal_size"
        android:textColor="@color/color_text_black"
        app:layout_constraintEnd_toEndOf="@+id/imgCategory"
        app:layout_constraintStart_toStartOf="@+id/imgCategory"
        app:layout_constraintTop_toBottomOf="@+id/imgCategory" />

</androidx.constraintlayout.widget.ConstraintLayout>