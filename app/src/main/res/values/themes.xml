<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FrenchPastry" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryVariant">@color/primary_color_variant</item>
        <item name="colorOnPrimary">@color/color_primary_on</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black_main</item>
        <item name="colorSecondaryVariant">@color/black_main</item>
        <item name="colorOnSecondary">@color/black_main</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowFullscreen">true</item>
        <item name="android:fontFamily">@font/sans_fa_name_regular</item>
        <item name="textInputStyle">@style/Widget.MyApp.TextInputLayout</item>
    </style>

    <style name="Widget.MyApp.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
    </style>

    <style name="CustomRatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/yellow_200</item>
        <item name="colorControlActivated">@color/yellow_main</item>
    </style>

</resources>